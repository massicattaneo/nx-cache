Object.defineProperty(exports, "replacePlaceholder", {
    enumerable: true,
    get: function() {
        return replacePlaceholder;
    }
});
const replacePlaceholder = (sentence, replacements)=>{
    return sentence.replace(/{{\s*(\w+)\s*}}/g, (match, placeholder)=>{
        return placeholder in replacements ? replacements[placeholder] : match;
    });
};
