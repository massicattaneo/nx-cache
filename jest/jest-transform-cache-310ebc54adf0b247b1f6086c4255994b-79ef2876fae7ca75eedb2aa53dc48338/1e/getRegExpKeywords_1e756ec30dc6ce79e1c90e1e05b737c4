const _splitKeywords = require("./splitKeywords");
const escapeStringForRegExp = (string)=>string.replace(/[|\\{}()[\]^$+*?.]/g, "\\$&").replace(/-/g, "\\x2d");
const getRegExpKeywords = (keywords)=>{
    return (0, _splitKeywords.splitKeywords)(keywords).filter((keyword)=>keyword.length) // On this app, we won't use ""
    .map((keyword)=>{
        // Create a word regex, "\b" is a word separator
        return new RegExp(`\\b${escapeStringForRegExp(keyword)}\\b`, "gi");
    });
};

