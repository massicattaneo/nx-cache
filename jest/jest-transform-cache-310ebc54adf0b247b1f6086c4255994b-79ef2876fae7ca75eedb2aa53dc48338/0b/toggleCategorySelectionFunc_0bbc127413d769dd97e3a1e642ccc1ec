"use strict";
Object.defineProperty(exports, "__esModule", {
    value: true
});
Object.defineProperty(exports, "toggleCategorySelectionFunc", {
    enumerable: true,
    get: function() {
        return toggleCategorySelectionFunc;
    }
});
function toggleCategorySelectionFunc({ e, selectedCategories, setSelectedCategories, allContentCategories }) {
    const id = e.currentTarget.getAttribute("data-id");
    if (!id) return;
    const idx = selectedCategories.findIndex((category)=>category.id === id);
    if (idx !== -1) {
        setSelectedCategories((prev)=>[
                ...prev.slice(0, idx),
                ...prev.slice(idx + 1)
            ]);
        return;
    }
    const newCategory = allContentCategories.find((contentCategory)=>contentCategory.id === id);
    if (!newCategory) return;
    const newCategorySelection = {
        id,
        name: newCategory.name
    };
    setSelectedCategories((prev)=>[
            newCategorySelection,
            ...prev
        ]);
}

