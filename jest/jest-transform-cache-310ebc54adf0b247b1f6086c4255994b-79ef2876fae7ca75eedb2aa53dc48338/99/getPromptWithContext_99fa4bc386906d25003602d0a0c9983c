function getPromptWithContext(prompt, context = []) {
    let finalPrompt = "";
    for (const contextItem of context){
        switch(contextItem.type){
            case "cite":
                finalPrompt += `
                > ${contextItem.text}
                `;
                break;
            default:
                continue;
        }
    }
    finalPrompt += `${finalPrompt.length ? "\n --- \n" : ""}${prompt}`;
    return finalPrompt;
}

