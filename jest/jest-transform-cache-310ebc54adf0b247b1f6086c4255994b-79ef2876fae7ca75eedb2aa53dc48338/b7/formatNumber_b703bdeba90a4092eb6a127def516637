const formatNumber = (value, locale, options)=>new Intl.NumberFormat(locale, options).format(value);
const formatNumberShort = (value, locale, options)=>{
    const num = typeof value === "bigint" ? Number(value) : value;
    const absNum = Math.abs(num);
    if (absNum >= 1000000000) {
        return `${formatNumber(num / 1000000000, locale, options)}B`;
    }
    if (absNum >= 1000000) {
        return `${formatNumber(num / 1000000, locale, options)}M`;
    }
    return formatNumber(num, locale, options);
};

